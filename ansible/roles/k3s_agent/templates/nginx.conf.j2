# HTTP configuration to allow traffic on port 80 and pass through to Traefik
server {
    listen 80;
    listen [::]:80;

    server_name mythbound.dev status.mythbound.dev web.mythbound.dev game.mythbound.dev argo.mythbound.dev;

    # Pass HTTP traffic to Traefik (without SSL termination)
    location / {
        proxy_pass http://10.0.1.96;  # Traefik LoadBalancer IP
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto http;

        # WebSocket support for HTTP traffic
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
    }
}
