# HTTP configuration to allow traffic on port 80
server {
    listen 80;
    listen [::]:80;

    server_name mythbound.dev status.mythbound.dev web.mythbound.dev game.mythbound.dev;

    # Forward all HTTP traffic (without TLS) to the MetalLB load balancer IP
    location / {
        proxy_pass http://{{ metal_lb_api_proxy }};  # Forward HTTP traffic directly
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto http;

        # WebSocket upgrade for HTTP traffic
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
    }
}

# HTTPS configuration to pass through traffic to Traefik (MetalLB)
server {
    listen 443;
    listen [::]:443;

    server_name mythbound.dev status.mythbound.dev web.mythbound.dev game.mythbound.dev;

    # Forward HTTPS traffic (with TLS pass-through) to MetalLB load balancer IP
    location / {
        proxy_pass https://{{ metal_lb_api_proxy }};  # Forward HTTPS traffic
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        # WebSocket upgrade for HTTPS traffic
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
    }
}
